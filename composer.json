{
  "name": "pckg/migrator",
  "description": "Database and config migrations made simple",
  "homepage": "https://github.com/pckg/migrator",
  "license": "MIT",
  "authors": [
    {
      "name": "Bojan Rajh",
      "email": "schtr4jh@schtr4jh.net"
    }
  ],
  "require": {
    "pckg/database": "dev-master",
    "symfony/console": ">=3"
  },
  "require-dev": {
    "pckg-app/frontend-dev": "dev-master"
  },
  "autoload": {
    "psr-0": {
      "Pckg": "src\\"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit --help --stop-on-defect",
      "vendor/bin/phpcloc cloc src/",
      "vendor/bin/phpstan analyse src/ --level=1 || true",
      "vendor/bin/phpcs -p src/ || true",
      "vendor/bin/codecept run"
    ]
  },
  "scripts-descriptions": {
    "test": "Run all tests and quality checks"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}